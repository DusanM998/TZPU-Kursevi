@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary text-center">Brisanje Kupona</h1>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Kod Kupona</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CouponCode" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Iznos Popusta</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="DiscountAmount" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimalni Iznos</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="MinAmount" class="form-control" />
            </div>

            <div class="col-5 offset-2">

                <a asp-action="CouponIndex" class="btn-primary btn form-control ">Nazad</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-outline-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>