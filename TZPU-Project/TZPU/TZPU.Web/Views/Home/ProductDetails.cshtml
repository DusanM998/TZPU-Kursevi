@model ProductDto

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-light text-primary row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning"> @string.Format("{0:c}", Model.Price)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-warning text-light p-3 border">@Model.CategoryName</span>
                                    <p class="text-dark pt-3">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-light">
                <div class="col-12 col-md-6">
                    <button asp-action="Index" class="btn btn-primary form-control btn-lg p-0" style="height:55px;">Nazad na listu</button>
                </div>
                <div class="col-12 col-md-6">
                    <button type="submit" class="btn btn-outline-primary form-control btn-lg p-0" style="height:55px;">Dodaj u Korpu</button>
                </div>
            </div>
        </div>
    </div>
</form>
