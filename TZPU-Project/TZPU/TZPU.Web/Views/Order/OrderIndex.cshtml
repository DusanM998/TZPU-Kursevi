@{

	var status = Context.Request.Query["status"];
	var approved = "";
	var cancelled = "";
	var all = "";

	switch (status)
	{
		case "approved":
			approved = "active text-primary bg-secondary";
			break;
		case "cancelled":
			cancelled = "active text-primary bg-secondary";
			break;
		default:
			all = "active text-primary bg-secondary";
			break;
	}
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 d-flex justify-content-between">
		<div class="row">
			<h1 class="text-primary">Lista narudžbina</h1>
		</div>
		<ul class="list-group list-group-horizontal-sm pt-2">
			<a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="approved">
			<li class="list-group-item @approved">Potvrđena</li>
			</a>
			
			<a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="cancelled">
			<li class="list-group-item @cancelled">Otkazana</li>
			</a>
			<a style="text-decoration:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="all">
			<li class="list-group-item @all">Sve</li>
			</a>
		</ul>
	</div>
	<div class="card-body p-4">
		<table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>Email</th>
					<th>Ime</th>
					<th>Broj telefona</th>
					<th>Status</th>
					<th>Ukupno</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts{
	<script src="~/js/order.js"></script>
}